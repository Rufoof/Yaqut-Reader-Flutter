<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">


    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fixed_transparent_cover_bg_dark" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/collapse"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/circle_button"
                android:padding="14dp"
                android:visibility="gone"
                app:tint="@color/fixed_light_grey"
                android:src="@drawable/arrow_down"
                 />

            <ImageView
                android:id="@+id/more"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                android:background="@drawable/circle_button"
                android:padding="14dp"
                android:src="@drawable/options_menu"
                app:tint="@color/fixed_light_grey" />
            <LinearLayout
                android:id="@+id/more_menu"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginTop="38dp"
                android:background="@drawable/more_menu_bg_large"
                android:elevation="10dp"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:layoutDirection="rtl"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/action_book_details"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_read"
                        app:tint="@color/fixed_light_grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/book_details"
                        android:textColor="@color/fixed_light_grey" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/action_save"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/action_save_icon"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_save"
                        app:tint="@color/fixed_light_grey" />

                    <TextView
                        android:id="@+id/action_save_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="@string/save_on_shelf"
                        android:textColor="@color/fixed_light_grey" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/action_notes_and_marks"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ab_notes"
                        app:tint="@color/fixed_light_grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="@string/notes_and_marks"
                        android:textColor="@color/fixed_light_grey" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/action_download_book"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_down"
                        app:tint="@color/fixed_light_grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="@string/download_book"
                        android:textColor="@color/fixed_light_grey" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/action_ambient_sound"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ab_sounds"
                        app:tint="@color/fixed_light_grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="@string/ambient_sounds"
                        android:textColor="@color/fixed_light_grey" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/action_settings"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/left_menu_settings"
                        app:tint="@color/fixed_light_grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/settings"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/fixed_light_grey" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/action_share"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share_white_24dp"
                        app:tint="@color/fixed_light_grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:text="@string/share"
                        android:textColor="@color/fixed_light_grey" />

                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/download_offline_progress"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_book_cover"
                    android:layout_width="168dp"
                    android:layout_height="232dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    app:cardCornerRadius="15dp"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/book_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                         />

                    <FrameLayout
                        android:id="@+id/timer_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/fixed_transparent_cover_bg_dark"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:src="@drawable/ic_audio_alarm"
                            app:tint="@color/fixed_white" />

                        <TextView
                            android:id="@+id/timer_text"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/fixed_white"
                            android:textDirection="anyRtl"
                            android:textSize="17sp"
                            tools:text="4:45" />
                    </FrameLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:textColor="@color/fixed_light_grey"
                    android:textSize="18sp"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/remaining_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:textColor="@color/fixed_light_grey"
                    android:textSize="12sp"
                    tools:text="remaining time" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:id="@+id/total_duration_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="center"
                        android:textColor="@color/fixed_light_grey"
                        android:textSize="14sp"
                        tools:text="-4:45" />
                    <TextView
                        android:id="@+id/current_duration_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:textColor="@color/fixed_light_grey"
                        android:textSize="14sp"
                        tools:text="4:45" />

                </FrameLayout>

                <SeekBar
                    android:id="@+id/seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="40dp"
                    android:maxHeight="2dp"
                    android:minHeight="4dp"
                    android:progressDrawable="@drawable/yr_red_scrubber_progress_redirection"
                    android:thumbTint="@color/fixed_light_brand"
                     />

                <TextView
                    android:id="@+id/current_chapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:textColor="@color/fixed_light_grey"
                    android:textSize="12sp"
                    tools:text="current chapter" />

                <TextView
                    android:id="@+id/chapter_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:textColor="@color/fixed_light_grey"
                    android:textSize="12sp"
                    tools:text="chapter name" />

                <LinearLayout
                    android:id="@+id/media_player_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:id="@+id/previous_button"
                        android:layout_width="32dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        app:tint="@color/fixed_light_grey"
                        android:src="@drawable/ic_prev_chapter" />

                    <FrameLayout
                        android:layout_width="32dp"
                        android:layout_height="42dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/bwd_seconds_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            app:tint="@color/fixed_light_grey"
                            android:src="@drawable/ic_bwd" />

                        <TextView
                            android:id="@+id/bwd_time_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="@color/fixed_light_grey"
                            android:textSize="16sp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/play_progress"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />

                        <ImageView
                            android:id="@+id/play_button"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/icon_pause"
                            app:tint="@color/fixed_light_grey"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="32dp"
                        android:layout_height="42dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/fwd_seconds_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:tint="@color/fixed_light_grey"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_fwd" />

                        <TextView
                            android:id="@+id/fwd_time_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/regular"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="@color/fixed_light_grey"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/next_button"
                        android:layout_width="32dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        app:tint="@color/fixed_light_grey"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_next_chapter" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/book_mark_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/circle_button" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        app:tint="@color/fixed_light_grey"
                        android:src="@drawable/ic_audio_bookmark" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/toc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/circle_button" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_audio_toc"
                            app:tint="@color/fixed_light_grey" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/timer_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:src="@drawable/circle_button" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            app:tint="@color/fixed_light_grey"
                            android:src="@drawable/ic_audio_alarm" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/volume_icon"
                        android:layout_width="48dp"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_gravity="bottom">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/circle_button" />

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                app:tint="@color/fixed_light_grey"
                                android:src="@drawable/ic_audio_volume" />
                        </FrameLayout>

                        <include layout="@layout/yr_audio_volume_controller" />

                    </FrameLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <LinearLayout
                        android:id="@+id/speed_clicked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/reader_controls_bg"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/speedup_2x"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="2X"
                            android:textColor="#fff"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/speedup_1_5x"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1.5X"
                            android:textColor="#fff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/speedup_1_25x"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1.25X"
                            android:textColor="#fff"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/speedup_1x"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1X"
                            android:textColor="#fff"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/speedup_75x"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_marginBottom="40dp"
                            android:gravity="center"
                            android:text="0.75X"
                            android:textColor="#fff"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/speedup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom">

                        <ImageView
                            android:id="@+id/speedup_bg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_button" />

                        <TextView
                            android:id="@+id/speedup_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="1X"
                            android:textColor="@color/fixed_light_grey"
                            android:textSize="12sp" />
                    </FrameLayout>

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>
    <LinearLayout
        android:id="@+id/download_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/progress"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginEnd="2dp"
            tools:text="5%"
            android:fontFamily="@font/regular"
            android:textColor="@color/fixed_white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/download"
            android:fontFamily="@font/regular"
            android:textColor="@color/fixed_white"
            android:textSize="12sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/book_download_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layoutDirection="rtl"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true"
        android:visibility="gone" />

</FrameLayout>