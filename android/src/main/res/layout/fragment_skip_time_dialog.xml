<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="330dp"
             android:layout_height="match_parent"
    android:orientation="vertical"
             android:background="@color/light_grey"
             android:minWidth="260dp">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/sec_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/ten_sec"
            android:textColor="@color/dark_grey"
            android:textDirection="anyRtl"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey" />

        <RadioButton
            android:id="@+id/sec_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/fifteen_sec"
            android:textColor="@color/dark_grey"
            android:textDirection="anyRtl"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey" />

        <RadioButton
            android:id="@+id/sec_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/thirty_sec"
            android:textColor="@color/dark_grey"
            android:textDirection="anyRtl"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey" />

        <RadioButton
            android:id="@+id/sec_60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/sixty_sec"
            android:textColor="@color/dark_grey"
            android:textDirection="anyRtl"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_grey" />

        <RadioButton
            android:id="@+id/sec_90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/ninety_sec"
            android:textColor="@color/dark_grey"
            android:textDirection="anyRtl"
            android:textSize="14sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/brand_button"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:text="@string/confirm"/>
</LinearLayout>