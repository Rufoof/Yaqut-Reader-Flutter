<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right|center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notes_bookmarks_detail_text"
        android:textColor="@color/dark_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:enabled="false"
        android:gravity="center_vertical|right"
        android:maxEms="8"
        android:maxLines="2"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notes_bookmarks_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:enabled="false"
                android:textColor="@color/dark_grey"
                android:gravity="right|center_vertical"
                android:paddingTop="3dp"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/notes_bookmarks_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:enabled="false"
                app:tint="@color/brand" />

            <ImageView
                android:id="@+id/notes_bookmarks_color_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="3dp"
                android:enabled="false" />

        </LinearLayout>

        <TextView
            android:id="@+id/notes_bookmarks_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:enabled="false"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>
