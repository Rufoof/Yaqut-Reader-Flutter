<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="locale"
    android:layout_height="match_parent">



    <FrameLayout
        android:id="@+id/reader_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <co.yaqut.reader.widgets.ReaderTextView
            android:id="@+id/page_mainTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp" />


        <LinearLayout
            android:id="@+id/page_infoTextLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/page_progressTextView"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:textColor="@android:color/darker_gray"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/page_timeTextView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:ellipsize="end"
                android:gravity="right"
                android:maxEms="8"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/page_context_menu"
        android:layout_width="240dp"
        android:layout_height="92dp"
        android:layout_marginTop="150dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/page_context_menu_front"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/ic_context_menu_front"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/context_menu_changeColorButton"
                    android:layout_width="45dp"
                    android:layout_height="44dp"
                    android:background="@drawable/reader_context_menu_button" />

                <Button
                    android:id="@+id/context_menu_deleteMarkButton"
                    android:layout_width="48dp"
                    android:layout_height="44dp"
                    android:background="@drawable/reader_context_menu_button" />

                <Button
                    android:id="@+id/context_menu_addNoteButton"
                    android:layout_width="48dp"
                    android:layout_height="44dp"
                    android:background="@drawable/reader_context_menu_button" />

                <Button
                    android:id="@+id/context_menu_shareButton"
                    android:layout_width="48dp"
                    android:layout_height="44dp"
                    android:background="@drawable/reader_context_menu_button" />

                <Button
                    android:id="@+id/context_menu_searchButton"
                    android:layout_width="45dp"
                    android:layout_height="44dp"
                    android:background="@drawable/reader_context_menu_button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="-6.3dp"
                android:layout_marginRight="6dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/page_context_menu_pointerFront"
                    android:layout_width="22dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/ic_context_menu_pointer" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/page_context_menu_back"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/ic_context_menu_back"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="4dp"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="2dp">

                <Button
                    android:id="@+id/context_menu_colorBlueButton"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/reader_context_menu_button" />

                <Button
                    android:id="@+id/context_menu_colorOrangeButton"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/reader_context_menu_button" />

                <Button
                    android:id="@+id/context_menu_colorYellowButton"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/reader_context_menu_button" />

                <Button
                    android:id="@+id/context_menu_colorGreenButton"
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/reader_context_menu_button" />

                <Button
                    android:id="@+id/context_menu_closeColorButton"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/reader_context_menu_button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="-6.3dp"
                android:layout_marginRight="6dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/page_context_menu_pointerBack"
                    android:layout_width="22dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/ic_context_menu_pointer" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


    <RelativeLayout
        android:id="@+id/page_noteHolderRelativeLayout"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center_horizontal" />

</FrameLayout>