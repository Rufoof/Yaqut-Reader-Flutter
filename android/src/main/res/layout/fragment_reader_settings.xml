<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_fragment_scroll_holder"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:paddingTop="15dp"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/background"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/volumeUsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/click_feedback_darker"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/isVolumeUsed"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/volume_Keys_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/regular"
                        android:text="@string/volume_title"
                        android:textColor="@color/dark_grey"
                        android:textSize="18sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/volume_Keys_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:fontFamily="@font/regular"
                    android:text="@string/volume_info"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="@color/background" />

            <LinearLayout
                android:id="@+id/keepAwake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/click_feedback_darker"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/isKeepAwakeUsed"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:clickable="false" />


                    <TextView
                        android:id="@+id/keepAwake_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/regular"
                        android:text="@string/keep_awake_title"
                        android:textColor="@color/dark_grey"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/keepAwake_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:fontFamily="@font/regular"
                    android:text="@string/keep_awake_info"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:background="@color/background" />

            <LinearLayout
                android:id="@+id/enableProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/click_feedback_darker"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/isProgressEnabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/enable_progress_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/regular"
                        android:text="@string/progress_bar_key"
                        android:textColor="@color/dark_grey"
                        android:textSize="18sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/enable_progress_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:fontFamily="@font/regular"
                    android:text="@string/progress_bar_info"
                    android:textColor="@color/dark_grey"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/reader_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/click_feedback_darker"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/reader_animation_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/animation_style"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/regular"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reader_animation_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/regular"
                android:text="@string/reader_animation_info"
                android:textColor="@color/dark_grey"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/player_skip_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/click_feedback_darker"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/player_skip_time_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/skip_time"
                android:fontFamily="@font/regular"
                android:textColor="@color/dark_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/player_skip_time_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/regular"
                android:text="@string/skip_time_info"
                android:textColor="@color/dark_grey"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/page_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/click_feedback_darker"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/page_number_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/page_number"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/regular"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/page_number_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/regular"
                android:text="@string/page_number_info"
                android:textColor="@color/dark_grey"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>