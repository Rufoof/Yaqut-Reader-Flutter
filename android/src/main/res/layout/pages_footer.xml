<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/progress_footer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/player_footer"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            tools:visibility="visible">


            <ImageView
                android:id="@+id/cover_bg_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />

            <View
                android:id="@+id/player_footer_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fixed_transparent_cover_bg_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="30dp"
                        android:src="@drawable/ic_player_expand" />
                    <TextView
                        android:id="@+id/player_speedup"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1X"
                        android:layout_marginEnd="30dp"
                        android:textColor="#fff"
                        android:textSize="18sp" />



                </LinearLayout>

                <ImageView
                    android:id="@+id/player_play_toggle"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"

                    android:src="@drawable/ic_player_play"
                    android:contentDescription="تشغيل ايقاف" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">



                    <ImageView
                        android:id="@+id/player_volume"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/ic_player_volume"
                        android:contentDescription="الصوت" />

                    <ImageView
                        android:id="@+id/player_close"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:src="@drawable/ic_player_close" />
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_gravity="top"
                android:layout_marginTop="62dp"
                android:background="#fff" />

        </FrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/cover_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <View
            android:id="@+id/footer_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fixed_transparent_cover_bg_dark" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="top"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingStart="3dp"
                android:paddingEnd="13dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ab_bookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/click_feedback_darker"
                        android:clickable="true"
                        android:padding="10dp"
                        android:src="@drawable/ab_bookmark"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#FFF" />

                    <ImageView
                        android:id="@+id/ab_settings"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/click_feedback_darker"
                        android:clickable="true"
                        android:padding="10dp"
                        android:src="@drawable/left_menu_settings"
                        android:visibility="gone"
                        app:tint="@color/fixed_white" />

                    <ImageView
                        android:id="@+id/ab_ambient_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/click_feedback_darker"
                        android:clickable="true"
                        android:padding="10dp"
                        android:src="@drawable/ab_sounds"
                        android:visibility="gone" />
                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/click_feedback_darker"
                    android:clickable="true"
                    android:padding="10dp"
                    android:src="@drawable/ab_toc"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/toc_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="#fff"
                    android:fontFamily="@font/regular"
                    android:textSize="14sp"
                    android:drawablePadding="8dp"
                    app:drawableLeftCompat="@drawable/arrow_down"
                    app:drawableTint="@color/fixed_white" />


            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_gravity="top"
                android:background="#fff" />

            <LinearLayout
                android:id="@+id/book_navigation_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/redo"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:background="@drawable/click_feedback_darker"
                    android:clickable="true"
                    android:padding="10dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/click_feedback_darker"
                    android:clickable="true"
                    android:paddingLeft="16dp"
                    android:paddingTop="6dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="6dp"
                    android:src="@drawable/ab_search"
                    android:contentDescription="بحث" />

                <co.yaqut.reader.widgets.ProgressSeekbar
                    android:id="@+id/page_slider"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginEnd="15dp"
                    android:maxHeight="2dp"
                    android:minHeight="4dp"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumbTint="@color/fixed_light_brand" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/page_infoTextLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="27dp"
                android:paddingStart="13dp"
                android:paddingEnd="13dp">

                <TextView
                    android:id="@+id/page_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:fontFamily="@font/regular"
                    android:textColor="#fff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/remaining_pages_tv"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:ellipsize="end"
                    android:fontFamily="@font/regular"
                    android:gravity="right"
                    android:maxEms="8"
                    android:text="تبقى 5 صفحة لنهاية الفصل"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>